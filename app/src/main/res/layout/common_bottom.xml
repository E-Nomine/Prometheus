<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        >

        <ImageButton
            android:id="@+id/bottom_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bar_share"
            android:background="#FFFFFF"
            android:padding="5dp" />

        <ImageButton
            android:id="@+id/bottom_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like_selecter"
            android:background="#FFFFFF"
            android:padding="5dp" />
        <ImageButton
            android:id="@+id/bottom_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fav_selecter"
            android:background="#FFFFFF"
            android:padding="5dp" />
        <ImageButton
            android:id="@+id/bottom_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bar_comment"
            android:background="#FFFFFF"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>